server {
	listen 80;
	listen [::]:80;
	server_name spdf.me;

	include /home/mio/scripts/nginx_conf/letsencrypt.conf;
	
	location / {
		return 301 https://$http_host$request_uri;
	}
}
server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	ssl_certificate /home/mio/www/letsencrypt/spdf.me/fullchain.pem;
	ssl_certificate_key /home/mio/www/letsencrypt/spdf.me/privkey.pem;

	server_name spdf.me;

	root /home/mio/scripts/blog/wordpress;
	index index.html index.php;

	include /home/mio/scripts/nginx_conf/secureSSL.conf;
	include /home/mio/scripts/nginx_conf/wordpress.conf;
	client_max_body_size 100m;
}
